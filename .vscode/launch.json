    "version": "0.2.0",
    "configurations": [
        {
            "name": "TorchRun: Debug scripts.base_eval (Multi-GPU)",
            "type": "debugpy",
            "request": "launch",
            "module": "torch.distributed.run",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "args": [
                "--standalone",
                "--nproc_per_node=2",
                "-m",
                "${relativeFileDirname}.${fileBasenameNoExtension}",
                "--",
                "--depth=10",
                "--device_batch_size=8",
                "--num_iterations=10",
                "--run=${env:WANDB_RUN}"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "${relativeFileDirname}.${fileBasenameNoExtension}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        }
    ]
}