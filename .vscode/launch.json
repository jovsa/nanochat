{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug scripts.base_eval",
            "type": "debugpy",
            "request": "launch",
            "module": "scripts.base_eval",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "args": [
                "--max-per-task",
                "5"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Debug scripts.base_eval (no args)",
            "type": "debugpy",
            "request": "launch",
            "module": "scripts.base_eval",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "TorchRun: Debug scripts.base_eval (Multi-GPU)",
            "type": "debugpy",
            "request": "launch",
            "module": "torch.distributed.run",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "args": [
                "--standalone",
                "--nproc_per_node",
                "2",
                "-m",
                "scripts.base_eval",
                "--",
                "--max-per-task",
                "20"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        }
    ]
}